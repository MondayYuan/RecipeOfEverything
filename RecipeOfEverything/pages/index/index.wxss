/**index.wxss**/
page {
  background: #fff;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.top{
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.top image{
  width: 330rpx;
  height: 90rpx;
  margin-top: 60rpx;
}

.top .slogan{
  margin-top: 30rpx;
  font-size: 20rpx;
  line-height: 20rpx;
  color: #cccccc;
}

.top .search{
  width: 620rpx;
  height: 65rpx;
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  background: #cccccc;
  border-radius: 30rpx;
  box-sizing: border-box;
  padding-left:145rpx;
}

.top .search image {
  height: 50rpx;
  width: 50rpx;
  margin-top: 0;
}

.top .search text{
  font-size: 36rpx;
  line-height: 36rpx;
  margin-left: 30rpx;
  vertical-align: center;
}

.body {
  position: absolute;
  top: 460rpx;
  width: 100%;
  box-sizing: border-box;
}

.label image {
  height:40rpx; 
  width:40rpx;
  vertical-align: middle;
}

.label text {
  font-size: 32rpx;
  font-weight: 500;
  margin-left: 10rpx;
  vertical-align: middle;
}



.category {
  margin-top: 45rpx;
  margin-bottom: 100rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.category .box{
  height: 415rpx;
  width: 330rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.category .box image{
  height: 350rpx;
  width: 330rpx;
  border-radius: 20rpx;
}

.category .box .label{
  height: 35rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 15rpx;
}

.category .box .label image{
  width: 35rpx;
  height: 35rpx;
}

.category .box .label text {
  font-size: 35rpx;
  line-height: 35rpx;
  font-weight: bold;
  margin-left: 10rpx;
}